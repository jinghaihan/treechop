{
  "name": "treechop",
  "type": "module",
  "version": "0.1.2",
  "packageManager": "pnpm@10.20.0",
  "description": "ðŸŒ³ A lightweight TypeScript utility library for working with tree data structures, providing common operations.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/treechop#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/treechop.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/treechop/issues"
  },
  "keywords": [
    "tree",
    "utils",
    "iterator",
    "traverse"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --clean --dts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint",
    "deps": "taze major -I",
    "release": "bumpp",
    "catalog": "pncat",
    "prepare": "simple-git-hooks",
    "bootstrap": "pnpm install",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@types/node": "catalog:types",
    "@vitest/coverage-v8": "catalog:test",
    "bumpp": "catalog:cli",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "pncat": "catalog:cli",
    "simple-git-hooks": "catalog:lint",
    "taze": "catalog:cli",
    "tsdown": "catalog:build",
    "typescript": "catalog:tsc",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
